<h1>Регистрация</h1>


<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object=>f.object %>
<table >
  <tr>
    <td >

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>

    </td>
    <td >
  <div class="link">
    <%= gravatar_for @user %>
  </div>
	<div class="link">
    <%= link_to "change","http://gravatar.com/emails"  %>
  </div>

    </td>
  </tr>
</table>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

<% end %>



